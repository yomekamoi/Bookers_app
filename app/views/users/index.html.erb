<% if @book.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @book.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<!--グリッドシステム  -->
<div class="container">
<div class="row">
<div class="col-xs-3">
     <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    <table class="table">
      <tr>
        <td><strong>name</strong></td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td><strong>introduction</strong></td>
        <td><%= current_user.introduction %></td>
      </tr>
    </table>
    <%= link_to edit_user_path(current_user.id), class: " btn btn-default btn-block" do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
    

    <!-- 本の一覧 -->
    <div>
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <h4><strong>Title</strong>
      <%= f.text_field :title, class: "book_title f_book" %></h4>
      <h4><strong>Opinion</strong>
        <%= f.text_area :body, class: "book_body f_book" %></h4>
      <p><%= f.submit "Create Book", class: "btn btn-primary btn-block" %></p>
      <% end %>
    </div>
  </div>
  <!-- 左カラムここまで -->

  <!-- 右カラムここから -->
  <div class="col-xs-9">


    <!-- ユーザー一覧 -->
    <div>
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tr>
            <td><span><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></span></td>
            <td><span><%= user.name %></span></span></td>
            <td><span><%= link_to "Show",user_path(user) %></span></td>
            </tr>
          <% end %>
        </table>
    </div>
   <!-- 右カラムここまで -->
  </div>
</div>
</div>
</div>